{
    "name": "myapp",
    "version": "0.0.1",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "start:web": "npx kill-port 3000 && yarn workspace web start",
        "start:expo": "cd packages/mobile && expo start",
        "start:expoclean": "cd packages/mobile && expo r -c",
        "deploy:expo": "cd packages/mobile && expo publish",
        "deploy:web": "cd packages/web && yarn build && netlify deploy --prod",
        "format": "prettier --write .",
        "lint": "eslint .",
        "clean": "del -f node_modules && yarn cache clean && yarn"
    },
    "devDependencies": {
        "@react-native-community/eslint-config": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "eslint": "^8.16.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.5.0",
        "lint-staged": "^12.4.2",
        "prettier": "^2.6.2",
        "typescript": "^4.7.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ],
        "*.{js,jsx,ts,tsx,json,html,md,css}": [
            "prettier --write"
        ]
    }
}
